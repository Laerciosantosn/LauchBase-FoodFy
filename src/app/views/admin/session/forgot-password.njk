{% extends "Layout.njk" %}

{% block head %}
    <title>Login in Foodfy</title>
{% endblock %}

{% block content %}
<main>
  <div class="loginbox">
    <h1>Recover password</h1>
    <form method="POST" action="/users/forgot-password">
      <p>Email</p>
      <div>
        <input 
          type="email" 
          id="email"
          name="email" 
          placeholder="Enter Your Email" 
          onblur="Validate.apply(this, 'isEmail')">
      </div>
      <input type="submit" value="Submit">
    </form>
  </div>
  </main>
{% endblock %}