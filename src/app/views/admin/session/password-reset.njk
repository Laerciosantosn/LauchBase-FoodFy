{% extends "Layout.njk" %}

{% block head %}
    <title>Login in Foodfy</title>
{% endblock %}

{% block content %}
<main>
  <div class="loginbox">
   <i class="material-icons avatar">account_circle</i>
    <h1>Login</h1>
    <form action="">
      <p>Email</p>
      <input type="text" name="" placeholder="Enter Your Email">
      <p>New Password</p>
      <input type="password" name="" placeholder="Enter a new password">
      <p>Repeat Password</p>
      <input type="password" name="" placeholder="Repeat the new password">
      <input type="submit" name="" value="Login">
      <div class="textLogin">
        <a href="#"> Lost your password?</a>
        <a href="#">Don't have account?</a>
      </div>
    </form>
  </div>
  </main>
{% endblock %}