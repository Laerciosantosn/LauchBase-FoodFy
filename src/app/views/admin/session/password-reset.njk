{% extends "Layout.njk" %}

{% block head %}
    <title>Login in Foodfy</title>
{% endblock %}

{% block content %}
<main>
  <div class="loginbox">
    <h1>Reset password</h1>
    <form method="POST" action="/users/reset-password">
      <p>Email</p>
      <div>
        <input 
          type="email"
          id="email" 
          name="email" 
          placeholder="Enter Your Email"
          onblur="Validate.apply(this, 'isEmail')"
        >
      </div>  
      <p>New Password</p>
      <input type="password" name="password" placeholder="Enter a new password">
      <p>Repeat Password</p>
      <input type="password" name="passwordRepeat" placeholder="Repeat the new password">
      <input type="submit" value="Save">
      <input type="hidden" name="token" value="{{token}}">
    </form>
  </div>
  </main>
{% endblock %}