{% extends "Layout.njk" %}

{% block head %}
    <title>Login in Foodfy</title>
{% endblock %}

{% block content %}
<main>
  <div class="loginbox">
   <i class="material-icons avatar">account_circle</i>
    <h1>Login</h1>

    <form method="POST" action="/users/login">
      <p>Username</p>
      <div>
        <input 
          id="email" 
          {% if error %} class="erroremail" {% endif %}
          type="email" 
          name="email" 
          placeholder="Enter Username" 
          value="{{user.email}}" 
          onblur="Validate.apply(this, 'isEmail')"
          >
      </div>
      <p>Password</p>
      <input type="password" name="password" placeholder="Enter Password" {% if error %} class="erroremail" {% endif %}>
      <input type="submit" value="Login">
      <div class="textLogin">
        <a href="/users/forgot-password"> Lost your password?</a>
        <a href="/users/reset-password">Reset Password</a>
      </div>
    </form>

  </div>
  </main>
{% endblock %}
